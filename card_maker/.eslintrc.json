{
    "env": {
        "browser": true,
        "es2021": true
    },
    "root": true,
    "extends": [
        "standard",
        "standard-jsx",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier",
        "plugin:prettier/recommended",
        "@gravity-ui/eslint-config",
        "@gravity-ui/eslint-config/prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error"
    }
}
